@using PROG7312_POE.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiguduVille Municipality</title>
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --gold: #d4af37;
            --dark-gold: #b68c28;
            --bg-dark: #1c1c1c;
        }

        body {
            background-color: #fffbea;
            color: #2b2b2b;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header.site-header {
            background: linear-gradient(90deg, var(--dark-gold), var(--gold));
            color: white;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
        }

        header.site-header h1 {
            font-weight: 700;
        }
        /* Navbar clean white styling */
        nav.navbar {
            background-color: #fff !important; /* pure white background */
            border-bottom: 1px solid #e0e0e0; /* subtle grey border */
            box-shadow: 0 2px 5px rgba(0,0,0,0.05); /* light shadow for depth */
        }

        .navbar-brand {
            color: #2b2b2b !important; /* dark neutral color */
            font-weight: bold;
        }

        .nav-link {
            color: #2b2b2b !important; /* dark neutral color */
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }

            .nav-link:hover,
            .nav-link.active {
                color: #d4af37 !important; /* gold only on hover/active */
                text-shadow: 0 0 3px rgba(212, 175, 55, 0.3); /* subtle glow */
            }

        /* Navbar toggler button */
        .navbar-toggler {
            border-color: #d4af37; /* subtle gold border */
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28212,175,55,0.7%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }


        .btn-primary {
            background-color: var(--gold);
            border-color: var(--gold);
            color: #fff;
        }

        .btn-primary:hover {
            background-color: var(--dark-gold);
            border-color: var(--dark-gold);
        }

        .btn-success {
            background-color: var(--dark-gold);
            border-color: var(--dark-gold);
        }

        .card {
            border: 1px solid var(--gold);
            border-radius: 10px;
        }

        .card-title {
            color: var(--dark-gold);
            font-weight: 600;
        }

        .alert-info {
            background-color: #fff8dc;
            border-color: var(--gold);
            color: #4b4b4b;
        }

        footer {
            background-color: var(--bg-dark);
            border-top: 3px solid var(--gold);
        }

        footer strong {
            color: var(--gold);
        }

        .progress {
            background-color: #f8f9fa;
            border: 1px solid var(--gold);
            height: 20px;
            border-radius: 10px;
        }

        .progress-bar {
            background-color: var(--gold);
        }

        .hero {
            background: linear-gradient(135deg, #fff8e1, #fff3c4);
            border: 2px solid var(--gold);
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.25);
        }

        a {
            color: var(--dark-gold);
        }

        a:hover {
            color: var(--gold);
            text-decoration: underline;
        }

        .logo-img {
            height: 80px; 
            width: auto;
            border-radius: 8px;
            object-fit: contain;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        main {
            flex: 1;
        }

 
    </style>
</head>

<body>
    <header class="site-header">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div>
                <img src="~/images/hero.png" class="logo-img" style="height=5px; border-radius:2px;" />
            </div>
            <div class="text-end">
                <h1 class="mb-0">SiguduVille Municipality</h1>
                <small class="text-light">Connecting Citizens to Services</small>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-warning shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" href="/">SiguduVille</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/ReportIssues/Create">Report an Issue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/LocalEvents">Local Events & Announcements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/ServiceRequestStatus/Index">Service Request Status</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-white py-3 mt-4">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <strong>SiguduVille Municipality</strong>
                <div class="small">123 Civic Centre, SiguduVille | Tel: (021) 555-0123 | info@riverdale.gov.za</div>
            </div>
            <div class="text-end small">
                <div>Operated by SiguduVille Municipal IT</div>
                <div>&copy; 2025 SiguduVille Municipality</div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
